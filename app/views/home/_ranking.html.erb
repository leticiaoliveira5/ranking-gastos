<div class="text-center mt-3">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">Posição</th>
        <th scope="col">Foto Parlamentar</th>
        <th scope="col">Informações</th>
      </tr>
    </thead>
    <tbody>
      <% @ranking.each_with_index do |row, index| %>
      <tr>
        <th scope="row"> <%= index + 1 %></th>
        <td> <%= image_tag(row.picture_url, height: 150) %></td>
        <td>
          <p> <%= row.name %> </p>
          <p> Total gasto: <%= number_to_currency(row.amount_spent, unit: "R$", separator: ",", delimiter: ".") %> </p>
          <p> Maior gasto: <%= number_to_currency(row.biggest_expenditure, unit: "R$", separator: ",", delimiter: ".") %> </p>
          <p> <%= link_to 'Ver detalhes do candidato', deputy_path(row.id) %> </p>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>